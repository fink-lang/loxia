{skip, describe, it, expect, to_match_snapshot} = import '@fink/jest/test.fnk'
{fink2js} = import '../../testing/generate.fnk'



describe 'pipe', fn:
  it 'compiles', fn:
    expect
      fink2js '
        p1 = pipe:
          foo
          bar ?, 123
          spam
          ?.spam 456
          [4, 5, ...?]

        p2 = pipe [1, 2, 3]:
          map fn item: item * 2
      '
      to_match_snapshot



describe 'small pipe |', fn:
  it 'pipes', fn:
    expect
      fink2js '
        foo = 134 | is_int
      '
      to_match_snapshot

  skip.it 'handles precedence', fn:
    expect
      fink2js '
        foo = "foo" | matches rx"[a-z]", ?
        bar = [spam | ham, shrub | ni]
      '
      to_match_snapshot
