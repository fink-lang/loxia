{skip, describe, it, expect, to_match_snapshot} = import '@fink/jest/test.fnk'
{fink2js} = import '../../testing/generate.fnk'


describe 'await', fn:
  it 'compiles', fn:

    expect
      fink2js '
        task1 = fn foo: -await foo

        task2 = fn foo: await (foo + 4)

        task3 = fn foo:
          spam = await foo _
          bar + 123

        a_gen = unfold fn curr=0:
          match shrub:
            spam: await ni curr
            else: curr + 1

        await ni
      '
      to_match_snapshot


  skip.it 'handles awaiting async iterables', fn:
    expect
      fink2js '
        [await foo, bar] = pipe:
          unfold fn cntr=0:
            await cntr + 1
      '
      to_match_snapshot

