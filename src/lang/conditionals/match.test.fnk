{fink2js} = import '../../testing'
{describe, it, eq, snapshot} = import '../../testing/jest'


describe:: 'match', fn:

  it:: 'compiles', fn:
    fink2js(`
      match shrub:
        {foo: 4, ni}: spam + ni
        123: spam
        [1, 2, ni]: ni
        else: shrub
    `) eq snapshot


  it:: 'compiles without else', fn:
    fink2js(`
      match shrub:
        {foo: 4, ni}: spam + ni
        123: spam
    `) eq snapshot


  it:: 'compiles nested obj pattern', fn:
    fink2js(`
      match shrub:
        {foo: 4, ni: {na, nu}}: spam + ni
        {foo: {bar: 'spam'}}: ni
        [1, 2, [ni]]: ni
        123: spam
    `) eq snapshot


  it:: 'compiles nested match', fn:
    fink2js(`
      test = fn:
        match foo:
          bar:
            match spam:
              shrub: ni
            bar
    `) eq snapshot


  it:: 'compiles patial application', fn:
    fink2js(`
      match {spam: 123}:
        ? > 123: ni

        {spam: ? > 123}: ni
        {spam: ?.is_foo()}: ni
        {spam: is_foo(?)}: ni

        [? > 123]: ni
        [?.is_foo()]: ni
        [is_foo(?)]: ni
    `) eq snapshot
