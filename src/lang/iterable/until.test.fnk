{fink2js} = import '../../testing/generate.fnk'
{describe, it, expect, to_match_snapshot} = import '@fink/jest/test.fnk'



describe 'until', fn:
  it 'compiles with default runtime', fn:
    expect
      fink2js '
        until item:
          item < 10
      '
      to_match_snapshot

    expect
      fink2js '
        until item, cntr=0:
          [cntr > 2, cntr + 1]
      '
      to_match_snapshot

    expect
      fink2js '
        until item, cntr=0, shared_accu:
          [cntr > 2, cntr + 1, shared_accu + 1]
      '
      to_match_snapshot


  it 'compiles with custom runtime', fn:
    fink2js '
        {_until_} = import "./iter.fnk"
        until item:
          item < 10
      '
      to_match_snapshot



describe 'until legacy', fn:
  it 'compiles', fn:
    expect
      fink2js '
        {_until_} = import "@fink/loxia:iter:legacy"
        until item:
          item < 10
      '
      to_match_snapshot


  it 'compiles with accu', fn:
    expect
      fink2js '
        {_until_} = import "@fink/loxia:iter:legacy"
        until _, cntr=0:
          [cntr > 2, cntr + 1]

        until , cntr=0:
          [cntr > 2, cntr + 1]
      '
      to_match_snapshot


  it 'compiles destructuring', fn:
    expect
      fink2js '
        {_until_} = import "@fink/loxia:iter:legacy"
        until [foo, ...bar]:
          foo_alone = foo and is_empty bar
          foo_alone

        until [...foo, bar]:
          bar and is_empty foo
      '
      to_match_snapshot



describe 'until async', fn:
  it 'compiles', fn:
    expect
      fink2js '
        {_until_} = import "@fink/loxia:iter:legacy"
        until item:
          await item < 10
      '
      to_match_snapshot