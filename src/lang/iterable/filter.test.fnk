{fink2js} = import '../../testing'
{describe, it, expect, to_match_snapshot} = import '@fink/jest'


describe 'filter', fn:
  it 'compiles', fn:
    expect
      fink2js '
        filter item:
          item % 2 == 0

        filter [a, ...b]:
          a_alone = a and 0 == length b
          a_alone

        filter [...a, b]:
          b and 0 == length a
      '
      to_match_snapshot


  it 'compiles with accu', fn:
    expect
      fink2js '
        filter item, cntr=0:
          (item < 1 and cntr % 2 == 0, cntr + 1)
      '
      to_match_snapshot

    expect
      fink2js '
        filter _, is_even=false:
          (is_even, not is_even)
      '
      to_match_snapshot

    expect
      fink2js '
        filter , is_even=false:
          (is_even, not is_even)
      '
      to_match_snapshot

