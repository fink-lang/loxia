{generator, for_of, yields} = import '../../js/types'

{get_iter_helpers} = import './common'



transform_map = fn node, ctx:
  {
    acc_init
    item, items
    item_acc_assign
    expressions
    result, result_is_spread
    next_accu
  } = get_iter_helpers node, ctx

  generator 'map', [items],
    ...acc_init

    for_of [item, items],
      ...item_acc_assign

      ...expressions

      yields
        result
        result_is_spread

      ...next_accu
