{fink2js} = import '../../testing'
{describe, it, expect, to_match_snapshot} = import '@fink/jest'


describe 'unfold', fn:

  it 'compiles item is accu', fn:
    expect
      fink2js '
        unfold prev=0:
          prev + 1
      '
      to_match_snapshot


  it 'compiles with separate item and accu result', fn:
    expect
      fink2js '
        unfold {prev=0, acc=0}={}:
          item = prev + accu
          (item, {prev: item, accu: accu + 1})
      '
      to_match_snapshot


  it 'compiles without default assignment', fn:
    expect
      fink2js '
        pipe 0:
          unfold prev:
            prev + 1
      '
      to_match_snapshot


  it 'compiles without accus', fn:
    expect
      fink2js '
        unfold:
          1234
      '
      to_match_snapshot


  it 'compiles with spread', fn:
    expect
      fink2js '
        unfold:
          ...[1, 2, 3]
      '
      to_match_snapshot


  it 'compiles destructured accus', fn:
    expect
      fink2js '
        unfold [foo, ...bar]:
          (foo, bar)
      '
      to_match_snapshot

    expect
      fink2js '
        unfold [...foo, bar]:
          (bar, foo)
      '
      to_match_snapshot

    expect
      fink2js '
        unfold [foo, ...bar]:
          (...foo, bar)
      '
      to_match_snapshot

