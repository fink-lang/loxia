
get_comments = fn {comment=null}:
  match comment:
    null: {}
    else:
      {value, loc} = comment
      {leadingComments: [{type: 'CommentBlock', value: `${value} `, loc}]}


wrap_with_comment_loc = fn js_node, larix_node:
  comments = get_comments:: larix_node
  {loc} = larix_node
  {...js_node, ...comments, loc}
