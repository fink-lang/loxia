{add, any} = import '../context.fnk'
{transform, ir_fn} = import '../transform.fnk'


wt = fn future_id, {loc}:
  ir_fn 'wt', [future_id], {loc}



transform_await = fn node, result, ctx:
  [future, future_id, next_ctx] = transform node.right, 'futr', ctx
  expr = wt future_id, node
  [[...future, [expr, [result]]], next_ctx]



add_async = fn ctx:
  pipe ctx:
    add 'await', any, transform_await

